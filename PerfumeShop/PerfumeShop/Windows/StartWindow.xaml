<Window x:Class="PerfumeShop.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerfumeShop.Windows"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#A5E887"/>
        <Button x:Name="btnBack" Click="btnBack_Click" Content="Назад" HorizontalAlignment="Left" Margin="20 0 0 0"/>
        <Image Source="\Resources\logo.png" HorizontalAlignment="Right" Margin="0 0 20 0" Height="60"/>
        <TextBlock Text="ООО Парфюмер" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <Frame x:Name="MainFrame" Grid.Row="1" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
