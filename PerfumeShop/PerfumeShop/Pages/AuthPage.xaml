<Page x:Class="PerfumeShop.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PerfumeShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин"></TextBlock>
            <TextBox x:Name="TBLogin"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Пароль"></TextBlock>
            <TextBox x:Name="TBPassword"></TextBox>
        </StackPanel>
        
        <Button Content="Войти" Grid.Row="2" x:Name="btnAuth" Click="btnAuth_Click"></Button>

        <Rectangle Fill="#A5E887" Grid.Row="3" ></Rectangle>
        <Button Content="Гостевой режим" Grid.Row="3" HorizontalAlignment="Right" Margin="0 0 20 0" x:Name="btnGuest" Click="btnGuest_Click"></Button>
        
    </Grid>
</Page>
